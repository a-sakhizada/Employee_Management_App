<%- include('layout/header') %>

<div class="conntainer">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="cad-header bg-primary">
                    <h2 class="text-light">Add New Employee</h2>
                </div>
            </div>
            <div clas="card-body" p-4>
                <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" 
                        placeholder="Enter Employee Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="text" name="email" class="form-control form-control-lg" 
                        placeholder="Enter Employee Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="employeeStatus">Current Employee Status</label><br>
                        <div class="form-check">
                            <input type="checkbox" id="employeedCheck" name="employeed" value="" class="form-check-input" required> 
                            <label class="form-check-label" for="employeed">Employeed</label><br>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="unemployeedCheck" name="unemployeed" value="" class="form-check-input" required> 
                            <label class="form-check-label" for="unemployeed">Unemployeed</label><br>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Attach a File</label>
                        <input class="form-control form-control-lg" type="file" name="image" required>
                    </div>
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Add Employee" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>